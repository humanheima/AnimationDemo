<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/iv_scenery"
                android:src="@drawable/scenery"
                android:layout_width="100dp"
                android:scaleType="centerCrop"
                android:layout_height="100dp" />

        <Button
                android:id="@+id/btn_frame_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试使用帧动画"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btn_transition_anim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试使用Transition动画"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btn_activity_options_compat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试使用ActivityOptionsCompat动画"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btn_listen_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="补间动画"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btn_property_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="属性动画"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btnLayoutTransition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试ViewGroup动画LayoutTransition"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btnSvg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="测试SVG"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btnPaint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="paint基本使用"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/btnBezierCurve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="了解贝塞尔曲线"
                android:textAllCaps="false" />

    </LinearLayout>

</ScrollView>
