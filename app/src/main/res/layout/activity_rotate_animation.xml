<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc">

    <LinearLayout
        android:id="@+id/activity_property_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivRotationY"
            android:layout_width="192dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/scenery"
            android:visibility="visible"
            tools:visibility="visible" />

        <Button
            android:id="@+id/btnStartRotationAnimation1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:onClick="onClick"
            android:text="绕着竖直中心线旋转"
            android:textAllCaps="false"
            android:visibility="visible"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/ivRotationY2"
                android:layout_width="192dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:background="@drawable/scenery" />

            <Button
                android:id="@+id/btnStartRotationAnimation2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="绕着水平中心线旋转"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/ivRotationY3"
                android:layout_width="192dp"
                android:layout_height="240dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/scenery" />

            <Button
                android:id="@+id/btnStartRotationAnimation3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="绕着中心点平面旋转"
                android:textAllCaps="false" />

        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>