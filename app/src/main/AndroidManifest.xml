<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hm.animationdemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ViewPropertyAnimatorActivity"></activity>
        <activity android:name=".activity.PathAnimatorActivity" />
        <activity android:name=".activity.PropertyAnimatorEntranceActivity" />
        <activity android:name=".activity.ViewAnimationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LayoutAnimationActivity" />
        <activity android:name=".activity.PropertyAnimationActivity" />
        <activity android:name=".activity.PointViewActivity" />
    </application>

</manifest>